# ベースイメージ
FROM node:18-alpine AS base

# 作業ディレクトリの設定
WORKDIR /app

# パッケージファイルをコピー
COPY package.json package-lock.json ./

# 依存関係のインストール
RUN npm ci

# ソースコードをコピー
COPY . .

RUN npm run build

# 本番用の最小構成を作成
FROM node:18-alpine AS production
WORKDIR /app

# 環境変数を設定
ENV NODE_ENV=production

# ポートを公開
EXPOSE 3000

# サーバを起動
CMD ["node", ".next/standalone/server.js"]

